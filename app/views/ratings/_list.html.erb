<table class="table table-hover">
  <thead>
    <tr>
      <th>Rating</th>
      <th>By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% ratings.each do |rating| %>
    <tr> 
      <td><%= rating %></td> 
      <td><%= link_to rating.user.username, user_path(rating.user) %> </td>
    </tr>
  <% end %>
  </tbody>
</table>