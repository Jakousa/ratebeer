<table class="table table-hover">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% items.each_with_index do |item, index| %>
    <tr> 
      <td><%= index + 1 %></td> 
      <td><%= link_to item, item %> </td>
    </tr>
  <% end %>
  </tbody>
</table>