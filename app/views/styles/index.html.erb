<h1>Listing styles</h1>

<p> Number of styles: <%= @styles.count %> </p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Style</th>
      <th>Number of beers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr> 
        <td> <%= link_to style, style_path(style) %> </td>
        <td> <%= style.beers.count %> </td>
      </tr>
    <% end %>
  </tbody>
</table>